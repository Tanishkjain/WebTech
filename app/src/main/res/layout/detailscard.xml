<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_marginTop="1dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
             android:layout_marginRight="@dimen/dimen16"
            android:text=" id :- 11"
            android:layout_alignParentRight="true"
            android:id="@+id/productId"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen10"
        android:id="@+id/brandhint"
        android:textColor="@color/colorPrimary"
        android:text="Brand Name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:padding="@dimen/dimen10"
        android:id="@+id/brandTittle"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textColor"
        android:text="Tittle1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen10"
            android:id="@+id/description"
            android:textColor="@color/colorPrimary"
           android:layout_below="@+id/brandhint"
            android:text="Description"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_below="@+id/brandTittle"
            android:padding="@dimen/dimen10"
            android:id="@+id/descriptiondata"
            android:layout_centerInParent="true"
            android:textColor="@color/textColor"
            android:text="Tittle1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen10"
            android:textColor="@color/greencolor"
            android:text="Created at  : 2017-12-12 23:54:25"
            android:layout_below="@+id/descriptiondata"
            android:id="@+id/createdBy"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>
